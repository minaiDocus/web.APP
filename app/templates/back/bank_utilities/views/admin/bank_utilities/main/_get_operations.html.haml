.mb-3
.row
  .col-md-12
    %table.table.table-condensed.table-striped#table_operations
      %thead
        %tr.text-center
          %th.text-center
            .form-check
              = check_box_tag 'master_checkbox', 0, false, class: 'form-check-input pointer float-none check-all-operation'
          %th= sortable :created_at,   'Créé le'
          %th= sortable :date,   'Date'        
          %th Value date
          %th Label
          %th Montant
          %th Processed at
          %th Est locké
          %th Organization
          %th Dossier
          %th Ecriture livrée ?
          %th Action
      %tbody
        - @operations.each do |operation|          
          %tr.text-center
            %th.text-center
              .form-check
                = check_box_tag 'operations[ids][]', operation.id, false, id: "rule_#{operation.id}", class: 'form-check-input pointer float-none check-operation checkbox'
            %td= l(operation.created_at, format: '%d %b %Y %H:%M')
            %td= l(operation.date, format: '%d %b %Y')
            %td= l(operation.value_date, format: '%d %b %Y')
            %td= operation.label
            %td= operation.amount
            %td= operation.processed_at
            %td= operation.is_locked ? "Oui" : "Non"
            %td= operation.organization.name
            %td= operation.user.code
            %td= operation.preseizure.try(:is_delivered?)
            %td.text-end.pointer
              .action.sub_edit_delete.list-collaborators
                %span.glyph= glyphicon('ellipses', { size: '12', style: 'transform: rotate(90deg)'})
              .sub_menu.text-start.hide
                %ul.no-margin.no-padding.regular
                  %li.view_operation{ data: { operation_id: operation.id, title: "Compte bancaire" } }
                    = link_to '#' do
                      %span.me-2= glyphicon('media-record', size: 12)
                      %span Force
    = render file: Rails.root.join('app/views/shared/_pagination.html.haml'), locals: { url: get_operations_admin_bank_utilities_path, target: '#table_operations', total_pages: @operations.total_pages, filter: 'operation-filter' }