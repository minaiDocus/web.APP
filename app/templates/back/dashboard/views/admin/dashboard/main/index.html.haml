                %img{ src: '/assets/application/spinner_gray_alpha.gif', alt: 'spin gif'}            
            .hide.content#failed_packs_delivery
        .col-sm-4
          .badge-content.back-yellow.for-badge= glyphicon('script', size: 14, color: "white")
          .my-3
