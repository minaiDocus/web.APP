            .hide.content#cedricom_orphans
      .row.animatedChild.toBottom
        .col-sm-4
          .badge-content.back-magenta.for-badge= glyphicon('aperture', size: 14, color: "white")
          .my-3
          .box.mb-2.cedricom_last_check.flux.animated-pointer{ data: { ref: 'cedricom_last_check' }}
            .my-3
            %label.ms-3.semibold.no-padding Cedricom - dernière Opé
            .text-end
              %label.count.cedricom_last_check.me-2#loading
                %img{ src: '/assets/application/spinner_gray_alpha.gif', alt: 'spin gif'}
              %label.red-label.cedricom_last_check.semibold.hide#no-check
                Aucun opération Cedricom depuis 7 jours
              %label.cedricom_last_check.hide#check-ok
        .col-sm-4
          .badge-content.back-blue-sky.for-badge= glyphicon('dashboard', size: 14, color: "white")
          .my-3
          .box.mb-2.jedeclare_last_check.flux.animated-pointer{ data: { ref: 'jedeclare_last_check' }}
            .my-3
            %label.ms-3.semibold.no-padding Jedeclare - dernière Opé
            .text-end
              %label.count.jedeclare_last_check.me-2#loading
                %img{ src: '/assets/application/spinner_gray_alpha.gif', alt: 'spin gif'}
              %label.red-label.jedeclare_last_check.semibold.hide#no-check
                Aucun opération Jedeclare depuis 7 jours
              %label.jedeclare_last_check.hide#check-ok
        .col-sm-4
          .badge-content.back-green.for-badge= glyphicon('fire', size: 14, color: "white")
          .my-3
          .box.mb-2.teeo_preassignment.flux.animated-pointer{ data: { ref: 'teeo_preassignment' }}
            .my-3
            %label.ms-3.semibold.no-padding Préaf en cours - TEEO
            .text-end
              %label.count.teeo_preassignment.me-2
                %img{ src: '/assets/application/spinner_gray_alpha.gif', alt: 'spin gif'}
            .hide.content#teeo_preassignment

    .col-sm-6.result-flux.animatedChild.toRight
      .box.back-grey
        %table.table.table-condensed.table-striped
          %thead.text-white
            %tr
              %th.text-center Date
              %th.text-center Lots
              %th.text-center Compte
              %th.text-center Message
          %tbody.text-white
  .mb-5
  .row.derivationBottom.box.small-shadow.clearfix.header
    .col-md-12      
      %h3
        Information dépuis le 
        %span.badge.bg-dark= I18n.l(30.days.ago)
        jusqu'à Aujourd'hui

  .animatedGroups
    .row
      .col-md-6.animatedChild.toLeft
        .box.p-3
          .text-center.mb-2
            %label.semibold Traitement des documents
          #chart_flux_document
            %img{ src: '/assets/application/spinner_gray_alpha.gif', alt: 'spin gif'}
      .col-md-6.animatedChild.toRight
        .box.p-3
          .text-center.mb-2
            %label.semibold Livraison des documents
          #document_delivery
            %img{ src: '/assets/application/spinner_gray_alpha.gif', alt: 'spin gif'}
    .row.animatedChild.toBottom
      .col-md-12
        .box.p-3
          .text-center.mb-2
            %label.semibold Documents téléversés par api        
          #document_api
            %img{ src: '/assets/application/spinner_gray_alpha.gif', alt: 'spin gif'}
    .row.animatedChild.toBottom
      .col-md-6
        .box.p-3
          .text-center.mb-2
            %label.semibold Opérations bancaires
          #bank_operation
            %img{ src: '/assets/application/spinner_gray_alpha.gif', alt: 'spin gif'}
      .col-md-6
        .box.p-3
          .text-center.mb-2
            %label.semibold Répartition des organisations et clients par logiciel comptable
          #software_customers
            %img{ src: '/assets/application/spinner_gray_alpha.gif', alt: 'spin gif'}

.modal#see-more-info
  .modal-dialog{style: 'min-width: 800px'}
    .modal-content
      .modal-header
        %h5.modal-title.bold Détail
        %button.btn-close{'aria-label' => 'Close', 'data-bs-dismiss' => 'modal', :type => 'button'}
      .modal-body
        
      .modal-footer
 
= javascript_include_tag 'back/dashboard/assets/javascripts/main'