#email.errors_list
  .row
    .col-12.tsypanel
      %ul
        - @email.errors_list.each do |error|
          %li
            - if error.class.in? [String, Symbol]
              = error
            - elsif error.is_a? Array
              = error.first
              %ul
                - error[1..-1].each do |attachment_error|
                  %li= attachment_error
