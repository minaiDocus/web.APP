- part ||= { name: ':date', separator: true, format: '' }

%li.field.pointer
  .input-prepend.input-append.clearfix
    %span.action.float-start.p-2= link_to glyphicon('move', { size: '16', color: "#72AA42" }), '#'
    = select_tag :directive, options_for_select(csv_descriptor_directive_options, part[:name]), id: 'select_directive', class: 'form-select float-start'
    = text_field_tag :format, part[:format], id: 'text_format', class: 'float-start ms-2 p-1'
    .number-input.float-start.w-25
      %span.step-down.minus.ms-3.mt-1.d-inline-block= glyphicon('minus', size: '12', color: "#72AA42")
      .select-container.no-padding.w-50.ms-2.d-inline-block
        = number_field_tag :format, part[:format], id: 'number-input', class: 'tooltips number-input-field', min: '0', step: '1',  title: 'Nombre de caratères max. (Vide ou 0 = sans limite)', data: { toggle: 'tooltip', placement: 'right' }
      %span.step-up.plus.ms-2.mt-1.d-inline-block= glyphicon('plus', size: '12', color: "#72AA42")
    = select_tag :format, options_for_select(csv_descriptor_format_options, part[:format]), id: 'select_format', class: 'form-select float-start ms-2 mr-2'    
    %label.switch.float-start.m-2
      %input#field-separator-state{:type => "checkbox", checked: part[:separator], value: part[:separator] ? "|separator" : "|space", class: 'remove-field-separator'}
      .slider.round
        %span.separator.on{ title: 'Désactiver le « Séparateur » point-virgule (;)', data: { toggle: 'tooltip', placement: 'right' }} ;
        %span.separator.off{ title: 'Activer le « Séparateur » point-virgule (;)', data: { toggle: 'tooltip', placement: 'right' }} ;
    %span.action.float-end.p-2{ style: 'margin-left: 2px; margin-top: -2px' }
      = link_to glyphicon('x', { size: '12', color: 'red'}), '#', id: '', class: 'remove_field'
