= stylesheet_link_tag 'front/csv_descriptors/assets/stylesheets/main'

#csv_descriptors.edit.derivationRight
  - unless @customer.configured?
    .box
      = render file: Rails.root.join('app/templates/front/customers/views/customers/main/_steps.html.haml')

  .card
    .card-header
      - if @customer.configured?
        %h3 
          Édition du format d’export .csv du client : 
          = link_to @customer, organization_customer_path(@organization, @customer, tab: 'csv_descriptor'), class: 'fs-origin'
      - else
        %h3
          Format d’export .csv pour le dossier :
          %span.fs-origin.text-info= @customer

    = render partial: 'form'

= javascript_include_tag 'front/csv_descriptors/assets/javascripts/main'
