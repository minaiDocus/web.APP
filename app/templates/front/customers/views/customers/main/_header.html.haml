- options = { size: '15', color: 'rgba(26, 26, 26, 0.7);'}
.row.box.clearfix
  .col-md-6.text-start    
    - if @customer.inactive?
      %span.badge.bg-danger.text-start.margin1right.closed_account Dossier clôturé
    %h3.bold.text-start
      Clients :
      %span.customer-name= @customer.info
    - if @customer.last_configuration_step.present?
      = link_to glyphicon('wrench', options) + ' Reprendre la configuration', resume_organization_customer_setup_path(@organization, @customer), class: 'btn btn-secondary margin1left'
  .col-md-6.text-end.no-padding
    - if @customer.active?
      = link_to glyphicon('ban', { size: '16', color: '#FF4848'}) + ' Clôturer le dossier', account_close_confirm_organization_customer_path(@organization, @customer), class: 'btn btn-danger customer-filter'
    - else
      = link_to glyphicon('floder', options) + ' Réouvrir le dossier', account_reopen_confirm_organization_customer_path(@organization, @customer), class: 'btn btn-primary'
    - if @user.is_admin && (@customer.active? || @customer.inactive_at > Time.now)
      = link_to glyphicon('ban', { size: '16', color: '#FF4848'}) + ' Clôturer le dossier maintenant !', account_close_confirm_organization_customer_path(@organization, @customer, close_now: 1), class: 'btn btn-danger customer-filter'