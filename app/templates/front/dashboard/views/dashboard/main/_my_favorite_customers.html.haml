- favorites.each do |favorite|
  .box
    .favorite-list
      .row
        .col-md-10.float-start
          %span.bold= favorite.name
          %br
          %i.text-muted
            = favorite.name
            %span.text-muted-light= favorite.info

        .col-md-1.no-padding.text-end
          %span.state{ class: "state-#{favorite.state}"}= favorite.note
        .col-md-1
          = link_to glyphicon('chevron-right', {size: '17', color: '#b5a6a6'}), '#', class: 'favorite-link', id: favorite.id

    .favorite-customer-content.hide{id: "details_#{favorite.id}"}
      %hr.clearfix 
      .row
        .col-md-10
          %h6.bold= t('dashboard.configuration_state')
          .text-small-content
            %p
              = t('dashboard.configuration_text')
              %span
                = link_to glyphicon('cog', {size: '11', color: '#b5a6a6'}), '#todo', class: 'support-chat-link'
        .col-md-1.no-padding.text-end
          %span.state.state-medium= t('dashboard.medium_state')
      %hr.clearfix
      .row
        .col-md-10
          %h6.bold= t('dashboard.folder_activity')
          .row              
            .col-md-4
              %span
                %span= t('dashboard.last_pack_added') + ' :'
            .col-md-3.text-end
              %span
                %span NDF 202011
                = link_to glyphicon('chevron-right', {size: '11', color: '#b5a6a6'}), '#todo', class: 'support-chat-link'
        .col-md-1.no-padding.text-end
          %span.state.state-good= t('dashboard.good_state')
      %hr.clearfix
      .row
        .col-md-10
          .row
            .col-md-4
              %span
                %span= t('dashboard.last_activity') + ' :'
            .col-md-3.text-end
              %span
                %span 06/11/20
                = link_to glyphicon('chevron-right', {size: '11', color: '#b5a6a6'}), '#todo', class: 'support-chat-link'
        .col-md-1.no-padding.text-end
          %span.state.state-medium= t('dashboard.medium_state')
      %hr.clearfix
      .row
        .col-md-10
          %h6.bold= t('dashboard.add_documents')
          .row
            .col-md-4
              %span= t('dashboard.errors_found') + ' :'
            .col-md-3.text-end
              %span 8
              = link_to glyphicon('chevron-right', {size: '11', color: '#b5a6a6'}), '#todo', class: 'support-chat-link'
          .row
            .col-md-4
              %span= t('dashboard.retrievers_failing') + ' :'
            .col-md-3.text-end
              %span 1
              = link_to glyphicon('chevron-right', {size: '11', color: '#b5a6a6'}), '#todo', class: 'support-chat-link'
          .row
            .col-md-4
              %span= t('dashboard.pre_assignement_duplicated') + ' :'
            .col-md-3.text-end
              %span 0
              = link_to glyphicon('chevron-right', {size: '11', color: '#b5a6a6'}), '#todo', class: 'support-chat-link'
        .col-md-1.no-padding.text-end
          %span.state.state-critical= t('dashboard.critical_state')