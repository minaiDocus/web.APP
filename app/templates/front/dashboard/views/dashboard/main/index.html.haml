= stylesheet_link_tag 'front/dashboard/assets/stylesheets/main'

.container-fluid
  .row
    %h1
      = t('dashboard.welcome_to')
      %span.label_idocus iDocus
      %span.label_user= current_user.name
  .row.direct_access
    %p= t('dashboard.folder_text_info')

  .row
    .col-md-4.view-documents.no-padding
      %button.btn.btn-primary.view-documents-btn= t('dashboard.view_my_documents')
  .row
    .col-md-6.no-padding
      %h3.favorite_label
        = t('dashboard.my_favorite_folders')
        %span.badge.badge-secondary.regular#my-favorite-customers-count 12
    .col-md-6
      %button.btn.btn-default.add-to-favorite.float-right{'data-target' => '#add-to-favorite', 'data-toggle' => 'modal', 'data-original-value' => '455', :type => 'button'}
        = glyphicon('plus', {size: '12', color: '#72AA42'})
        = t('dashboard.add_folder_to_favorite')
  .row.my-favorite-customers
    - if @favorites.size > 0
      = render partial: 'favorite_customers', locals: { collection: @favorites }
    - else
      .no-favorite-customer= t('dashboard.no_favorite_customer')
    

#add-to-favorite.modal.fade{'aria-hidden' => 'true', 'aria-labelledby' => 'myFavoriteModalLabel', :role => 'dialog', :tabindex => '-1'}
  .modal-dialog{:role => 'document'}
    .modal-content
      .modal-header
        %h5.modal-title.bold= t('dashboard.add_folder_to_favorite')
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', :type => 'button'}
          %span{'aria-hidden' => 'true'} Ã—
      .modal-body
        = form_tag('dashboard/add_customer_to_favorite/', method: :post, id: 'send_customer_to_favorite', multipart: true) do |f|
          .form-group
            .label-section
              = label_tag 'my_favorite_customers_list', t('dashboard.search_folder'), class: 'select control-label'
            .control-section
              = select_tag 'my_favorite_customers_list form-control', options_for_select(['DEVP%001 - TEST - Testa Test', 'DEVP%002 - TEST - Testa Test', 'DEVP%003 - TEST - Testa Test', 'DEVP%004 - TEST - Testa Test'], 'DEVP%004 - TEST - Testa Test'), class: 'select-customer searchable-option-list', id: 'select-customer-to-favorite', include_blank: false, multiple: true
      .modal-footer
        %button.btn.btn-light{'data-dismiss' => 'modal', :type => 'button'}= t('dashboard.cancel_action')
        %button.btn.btn-secondary.btn-add{:type => 'button', id: 'add-customer-to-favorite'}= t('dashboard.add_action')


= javascript_include_tag 'front/dashboard/assets/javascripts/main'
