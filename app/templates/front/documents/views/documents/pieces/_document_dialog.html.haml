#add-document.modal.fade{'aria-hidden' => 'true', :role => 'dialog', :tabindex => '-1'}
  .modal-dialog
    .modal-content
      %form#fileupload{ action: '/documents/uploader', method: 'POST', enctype: 'multipart/form-data', data: { params: file_upload_params.to_json } }
        .modal-header
          %h5.modal-title.bold Ajouter des documents
          %button.btn-close{'aria-label' => 'Close', 'data-bs-dismiss' => 'modal', :type => 'button'}
        .modal-body
          - if has_multiple_accounts?
            .form-group
              %label Code client
              = select_tag :file_code, options_for_select(file_upload_users_list.map{ |e| [e.short_info, e.code] }), include_blank: true, data: { placeholder: 'Choisir un client'}, id: :file_code, class: 'form-control'
          - else
            = hidden_field_tag :file_code, @user.code
          .form-group
            %label Type de document
            = select_tag :file_account_book_type, '', id: :file_account_book_type, class: 'form-control'
            %span#compta_processable{ style: 'display: none; margin-top: 9px' }
              %span.badge.badge-warning.fs-origin.margin1right
                Ce journal n'est pas paramétré pour une pré-saisie comptable.
          .form-group
            %label Période
            = select_tag :file_prev_period_offset, '', id: :file_prev_period_offset, class: 'text_field form-control'
            - if !@user.is_prescriber && @period_service.prev_expires_at
              %span.help-block{ style: 'margin-left: 0' }
                %span.fs-origin.badge.badge-warning.margin1right
                  Attention :
                Pour des raisons de clôture de période comptable, vous ne pouvez plus affecter de documents à la période #{period_option_label(@period_service.period_duration, Time.now - @period_service.period_duration.month)} après le #{l(@period_service.prev_expires_at, format: '%d %B %Y à %H:%M')}.
            - else
              %span.help-block{ style: 'display:none; margin-left: 0' }
                %span.fs-origin.badge.badge-warning.margin1right
                  Attention :
                Pour des raisons de clôture de période comptable, vous ne pouvez plus affecter de documents à la période
                %span.period
                après le
                %span.date
                \.
          = render file: Rails.root.join('app/templates/front/compta_analytics/views/compta_analytics/main/_preview.html.haml')
          .fileupload-buttonbar
            .upload-content.text-center.m-3
              .import-process.p-5
                .fileinput-button
                  .w-100
                    %span{ style: 'cursor: pointer!important' }= glyphicon('cloud-download', { size: '22', color: 'rgba(26, 26, 26, 0.7)'})
                  .w-100 Déposez vos fichiers ici
                  .w-100
                    %span ou
                    %span.pointer.green-label{ style: 'cursor: pointer!important' } séléctionnez-les depuis votre ordinateur
                    %input{ id: 'main_input_uploader', type: 'file', name: 'files[]', multiple: true }
              .import-success.p-5.hide
                .w-100
                  %span= glyphicon('check', { size: '22', color: '#72AA42'})
                .w-100 Importation terminée !
            .alert-content
              %label.red-label 
                Attention : Fichier de plus de 100 pages ou plus de 10 mégas non acceptés. PDF protégés non acceptés
            %br
            %table.table.table-striped{ role: "presentation" }
              %tbody.files{ data: { toggle: "modal-gallery", target: "#modal-gallery" } }
            .modal-footer
              %button.btn.btn-light.cancel{:type => 'button'} Annuler
              %button.btn.btn-primary.btn-add.start{:type => 'button', id: 'launch-filter'} Démarrer

        :plain
          <script>
            var fileUploadErrors = {
              maxFileSize: 'File is too big',
              minFileSize: 'File is too small',
              acceptFileTypes: 'Filetype not allowed',
              maxNumberOfFiles: 'Max number of files exceeded',
              uploadedBytes: 'Uploaded bytes exceed file size',
              emptyResult: 'Empty file upload result'
            };
          </script>
          <script id="template-upload" type="text/html">
          {% for (var i=0, files=o.files, l=files.length, file=files[0]; i<l; file=0[++i]) { %}
              <tr class="template-upload fade">
                  <td class="name">{%=file.name%}</td>
                  <td class="size">{%=o.formatFileSize(file.size)%}</td>
                  {% if (file.error) { %}
                    <td class="error"><span class="badge badge-danger fs-origin">Erreur</span> {%=fileUploadErrors[file.error] || file.error%}</td>
                  {% } else { %}
                    <td style="width:120px;">
                        <div class="progress progress-success progress-striped active margin1top"><div class="progress-bar" style="width:0%;"></div></div>
                    </td>
                  {% } %}
                  <td class="alignright">
                    {% if (!i && !o.options.autoUpload && !file.error) { %}
                      <button class="start btn-add btn btn-primary margin1right">
                        Démarrer
                      </button>
                    {% } %}
                    {% if (!i) { %}
                        <button class="cancel btn btn-light">
                          Annuler
                        </button>
                    {% } %}
                  </td>
              </tr>
          {% } %}
          </script>
          <script id="template-download" type="text/html">
            {% for (var i=0, files=o.files, l=files.length, file=files[0]; i<l; file=files[++i]) { %}
              <tr class="template-download fade">
                  {% if (file.file_corrupted) { %}
                    <td class="name">{%=file.name%}</td>
                    <td class="message" colspan="2">
                      <span class="badge badge-warning fs-origin">En attente</span>
                      Votre document est en-cours de traitement
                    </td>
                  {% } else if (file.error) { %}
                    <td class="name">{%=file.name%}</td>
                    <td class="error" colspan="2"><span class="badge badge-danger fs-origin">Erreur</span> {%=fileUploadErrors[file.error] || file.error%}</td>
                  {% } else { %}
                      <td class="name">{%=file.name%}</td>
                      <td class="new_name">{%=file.new_name%}</td>
                    <td class="message">
                      {% if (file.message) { %}
                        <span class="badge badge-warning fs-origin">En attente</span>
                        {%= file.message %}
                      {% } else { %}
                        <span class="badge badge-success fs-origin">Envoyé</span>
                      {% } %}
                    </td>
                  {% } %}
                    <td class="alignright">
                      {% if (file.link) { %}
                        <input type="hidden" class="original_filename" value="{%= file.original_file_name %}">
                        <input type="hidden" class="upload_user" value="{%= file.user_code %}">
                        <input type="hidden" class="journal" value="{%= file.journal %}">
                        <input type="hidden" class="prev_period_offset" value="{%= file.prev_period_offset %}">
                        <input type="hidden" class="api_name" value="{%= file.api_name %}">
                        <input type="hidden" class="analytic" value="{%= file.analytic %}">
                        <button class="btn btn-secondary view_already_exist" data-double-id="{%= file.link %}">
                          Voir le détail
                        </button>
                        <button class="btn btn-danger btn-add force" data-link="{%= file.link %}">
                          Forcer l'intégration
                        </button>
                      {% } %}
                      <button class="cancel btn btn-light">
                        Vu
                      </button>
                    </td>
              </tr>
          {% } %}
          </script>

