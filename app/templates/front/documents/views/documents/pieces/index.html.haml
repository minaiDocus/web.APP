= stylesheet_link_tag 'front/documents/assets/stylesheets/main'

.container-fluid
  .row.derivationLeft
    .col-md-7
      %h1.bold
        Lots pièces et écritures
        %span.badge.badge-secondary.regular.datas_size= @packs.total_count
    .col-md-2.no-padding
      .search-content
        .row.no-margin
          .col-md-1.no-padding.text-center.glass
            = glyphicon('magnifying-glass', { size: '16', color: 'background: rgba(26, 26, 26, 0.7)' })
          .col-md-11.no-padding.no-margin
            %input#search_input{ name:'pack_name', placeholder: 'Rechercher' }
    .col-md-1.text-center.no-padding
      %button.btn.btn-light.more-filter
        Filtrer
        %span
          = glyphicon('layers', { size: '16', color: '#72AA42'})
    .col-md-2.no-padding
      %button.btn.btn-primary.add-document
        %span= glyphicon('plus', { size: '16', color: '#FFFF'})
        &nbsp;Ajouter des documents
  .row.main-content.derivationRight
    - if @packs.size > 0
      - count       = @packs.size
      - packs_left  = []
      - packs_right = []
      - @packs.each_with_index do |pack, index|
        - ((index % 2) == 0)? packs_left << pack : packs_right << pack
      .w-50
        = render partial: 'pack_box', locals: { packs: packs_left }
      .w-50
        = render partial: 'pack_box', locals: { packs: packs_right }
    - else
      .no-data-found.box= t('global.no-data-found')

= render partial: 'document_dialog'

= javascript_include_tag 'front/documents/assets/javascripts/pieces'

