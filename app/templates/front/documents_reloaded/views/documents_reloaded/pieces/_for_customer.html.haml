.container-fluid.main-content
  .row
    .col-md-2
      - if @user.still_active? && @user.authorized_upload?
        %button.btn.btn-dark.add-document.w-100.semibold.mb-5
          %span.me-3.blink= glyphicon('plus', { size: '30', color: '#fff', style: "background-color:#C1D837; border-radius:50%; padding:5px;"})
          %span.blink Ajouter des documents
      
    .col-md-4
    .col-md-3.text-end.mt-2
      %span.filter-info.badge.bg-danger.p-2.regular.datas_size.hide Recherche par filtre activ√©
    .col-md-3
      .row
        .col-md-3.pt-2
          .semibold Dossier
        .col-md-9
          = select_tag 'customers', options_for_select(@users.reverse.map{ |e| [e.short_info, e.id] }, params[:uid].present? ? params[:uid] : @user.id), id: 'customers', class: 'form-select', include_blank: false

  .customer-document-content
    %input{ type: :hidden, id: "hidden-journal-id", name: "hidden-journal-id", value: @journals.first.id }
    = render partial: 'body_customer' 

= render partial: 'upload_dialog_customer' if @render_upload

= javascript_include_tag 'front/documents_reloaded/assets/javascripts/customer'