= stylesheet_link_tag 'front/customers/assets/stylesheets/main'

#journal.new
  = simple_nested_form_for @journal, url: journal_form_url(@organization, @customer, @journal), html: { class: 'form-horizontal', id: 'new-journal-form' } do |f|
    .carousel.slide#carousel-journal-form{  "data-bs-touch" => "false", "data-bs-interval" => "false" }
      .carousel-inner
        .carousel-item.active
          .journal-first-step-form
            - if @organization.specific_mission
              = f.label :description, label: 'Nom du dossier iDocus', hint: 'Inscrivez ici un nom familier pour votre dossier.', :class => "semibold"
              .select-container.no-padding.w-100
                = f.input :description, label: false, :placeholder => 'ex: (Achats)', input_html: { class: 'required_field'}
            - else
              = f.label :description, label: 'Nom du journal comptable iDocus', hint: 'Inscrivez ici entre parenthès le nom du journal comptable iDocus. Exemple (Achats). Ceci est nécessaire pour les utilisateurs du forfait iDo’Courrier notamment.', :class => "semibold"
              .select-container.no-padding.w-100
                = f.input :description, label: false, :placeholder => 'ex: (Achats)', input_html: { class: 'required_field'}
            - if @organization.specific_mission
              = f.label :name, label: 'Attribuez un nom de code dossier iDocus', hint: 'Ce code sera repris dans la charte de nommage de tous vos fichiers transmis.', :class => "semibold"
              .select-container.no-padding.w-100
                = f.input :name, label: false, :placeholder => 'ex: AC', input_html: { class: 'required_field'}
            - else
              = f.label :name, label: 'Attribuez un nom de code journal iDocus', hint: 'Ce code doit si possible être similaire à celui utilisé dans votre outil comptable. La modification de ce code journal n’est possible que pendant 24 heures.', :class => "semibold"
              .select-container.no-padding.w-100
                = f.input :name, label: false, :placeholder => 'ex: AC', input_html: { class: 'required_field'}

            - if @customer && ((@customer.uses?(:ibiza) && @organization.ibiza.try(:configured?)) || @customer.my_unisoft.try(:used?))
              - collection = journals_for_select(@journal.pseudonym)
            - else
              - collection = nil
            - unless @organization.specific_mission
              = f.label :pseudonym, label: 'Quel est le code journal comptable de votre outil comptable à associer ?', hint: (collection.present? ? 'Choisissez dans le menu déroulant les journaux comptables issus de la connexion avec votre outil comptable.' : nil), :class => "semibold"
              .select-container.no-padding.w-100
                = f.input :pseudonym, label: false, collection: collection, :placeholder => 'ex: AC'
            - if !@customer || is_preassignment_authorized?
              = f.input :entry_type, label: 'Sélectionnez le type de pré-saisie comptable pour le journal', collection: account_book_type_entry_type_for_select(@organization, @customer), include_blank: false, label_html: { class: 'semibold' }, input_html: { class: 'form-control select form-select form-select-sm optional'}
            - if @customer && @customer.uses?(:ibiza) && !@organization.ibiza.try(:configured?)
              %p.margin2bottom.margin30left
                = render 'shared/ibiza_not_configured_warning'

        .carousel-item
          - if @organization.knowings.try(:is_configured?)
            .knowings-configuration.hide
              %h4 Knowings
              %hr
              = f.input :domain, label: 'A quel domaine Knowings souhaitez-vous rattacher le journal comptable iDocus ?', collection: journal_domain_for_select, include_blank: false, label_html: { class: 'semibold' }, input_html: { class: 'form-control select form-select form-select-sm optional'}
          .no_entry_selected.hide Aucun type de pré-saisie comptable séléctionné.
          - if !@customer || is_preassignment_authorized?
            .pre-assignment-attributes.hide
              = f.input :currency, collection: journal_currencies, include_blank: false, selected: "EUR", hint: "Les écritures seront converties vers cette devise avec le taux de change de la date de facture", label_html: { class: 'control-label semibold' }, input_html: { class: 'form-control select form-select form-select-sm optional'}
              .form-group
                .row
                  .col-md-6.semibold
                    = f.label :account_type, label: 'Configuration du journal'
                    %span.pointer{ "data-bs-toggle" => "tooltip", "data-bs-placement" => "bottom", "data-bs-html" => "true", "title" => "<u>Compte d’attente</u> : la pré-saisie comptable sera effectuée avec les informations issues du plan comptable de votre outil comptable. Si il n’y a pas d’informations dans ce plan de compte, iDocus saisira les écritures dans les comptes d’attente paramétrés ici. <b>Compte par défaut</b> : iDocus saisira systématiquement toutes les factures déposées dans le journal comptable sur les comptes paramétrés sans se référer au plan comptable." }= glyphicon('info', { size: '15', color: 'rgba(26, 26, 26, 0.32)'} )          
                  .col-md-6
                    .form-check.form-check-inline                 
                      %label.form-check-label Compte d'attente
                      = radio_button_tag 'account_book_type[account_type]', 'waiting', false, class: 'form-check-input'
                    .form-check.form-check-inline               
                      %label.form-check-label Compte par défaut
                      = radio_button_tag 'account_book_type[account_type]', 'default', true, class: 'form-check-input'

              = f.label :meta_account_number, :class => "semibold"
              .select-container.no-padding.w-100
                = f.input :meta_account_number, label: false, input_html: { class: 'can_be_required' }
              = f.label :meta_charge_account, :class => "semibold"
              .select-container.no-padding.w-100
                = f.input :meta_charge_account, label: false, input_html: { class: 'can_be_required' }    
              %fieldset{class: 'border p-2', style: 'border:1px solid #999; border-radius:0px; padding: 17px !important'}
                %legend{class: 'w-auto vat_account_field', style: 'padding: 0.2em 0.5em; font-size:90%; text-align:center; position: relative'} Compte de TVA
                - if !@customer || @customer.options.is_taxable
                  - hint = !@customer ? 'obligatoire mais ne sera utilisé que pour les clients assujettis à la TVA' : 'Obligatoire mais ne sera utilisé que pour les clients assujettis à la TVA'
                  .form-grou.clearfix.string.optional.account_book_type_vat_accounts#account_book_type_with_default_vat_accounts
                    .label-section
                      .select-container.no-padding.w-100
                        %input.book-code-software{ type: 'text', name: 'account_book_type[vat_accounts_label]', value: "Compte de TVA par défaut attribué au journal comptable iDocus", disabled: 'disabled', :class => 'form-control string optional vat_accounts_label', id: 'account_book_type_default_label_vat_accounts' }
                        %i.help-block Quel est le compte de TVA par défaut attribué au Journal Comptable iDocus (le cas échéant) ? Exemple: 445660
                    .control-section
                      .select-container.no-padding.w-100
                        %input.book-code-software{ type: 'text', name: 'account_book_type[vat_accounts_rate]', value: 445660, :class => 'form-control string optional vat_accounts', id: 'account_book_type_default_vat_accounts' }
                        %i.help-block= hint
                  = hidden_field_tag 'required_new_vat_accounts_element', 'can_be_required', hint_input: hint, hint_label: 'Quel est le compte de TVA par défaut attribué au Journal Comptable iDocus (le cas échéant) ? Exemple: 445660'
                  = f.input :vat_accounts, as: :hidden, input_html: { id: 'account-book-type-vat-accounts-hidden' }
                  = link_to glyphicon('plus', size: '12', color: '#FFF') + ' Ajouter un compte de TVA', '#', class: 'btn btn-primary bold add_vat_account_field float-end no-margin'
              = f.label :anomaly_account, label: 'Quel est le compte à utiliser en cas d’anomalie ?', :class => "semibold"
              .select-container.no-padding.w-100
                = f.input :anomaly_account, label: false, input_html: { class: 'can_be_required'}, hint: 'si aucune information claire dans la pièce, si la pièce n’est pas une facture, …'
              .form-group.row
                .col-md-10
                  = f.label :jefacture_enabled, :class => "semibold"
                .col-md-2
                  .form-check.form-switch.idocus-custom-form-check
                    = f.input :jefacture_enabled, as: :boolean, label: false, label_html: { class: 'semibold form-check-label' }, input_html: { class: 'form-check-input input_switch input_check_field', id: 'book-type-jefacture-enabled' }
                    %label.semibold{class: 'form-check-label label_check_field', for: 'book-type-jefacture-enabled'} Non

        .carousel-item
          .carousel_item_last_slide
            - if !@customer || @customer.subscription.is_package?('mail_option')
              .ido-instruction
                = f.label :instructions, :class => "semibold"
                .select-container.no-padding.w-100
                  = f.input :instructions, as: :text, label: false, input_html: { maxlength: 400 }

            - unless @customer
              .default-options
                .form-group.row
                  .col-md-10
                    = f.label :is_default, :class => "semibold"
                  .col-md-2
                    .form-check.form-switch.idocus-custom-form-check
                      = f.input :is_default, as: :boolean, label: false, label_html: { class: 'semibold form-check-label' }, input_html: { class: 'form-check-input input_switch input_check_field', id: 'book-type-default-options' }
                      %label.semibold{class: 'form-check-label label_check_field', for: 'book-type-default-options'} Non

  .account_book_type_vat_accounts_field.hide
    .form-grou.clearfix.string.optional.account_book_type_vat_accounts.more_vat_accounts
      .row
        .col-md-11
          .label-section
            .select-container.no-padding.w-100
              %input.book-code-software{ name: 'account_book_type[vat_accounts_label]', type: 'number', value: 10, min: 1, max: 20, step: 0.1, :class => 'form-control string optional vat_accounts_label account_book_type_label_vat_accounts', 'data-toggle' => 'tooltip', 'data-placement' => 'top', 'title' => 'Taux de TVA (1-20)%' }
              %i.help-block.vat_accounts_label_error
          .control-section
            .select-container.no-padding.w-100
              %input.book-code-software{ name: 'account_book_type[vat_accounts_rate]', value: 445660, :class => 'form-control string optional vat_accounts', type: 'text' }
        .col-md-1
          = link_to glyphicon('x', { size: '15', color: "#FF4848" }), '#', href: '#', class: 'remove_vat_accounts_field', 'data-bs-toggle' => 'tooltip', 'data-placement' => 'right', 'title' => 'Supprimer'

= javascript_include_tag 'front/journals/assets/javascripts/main'