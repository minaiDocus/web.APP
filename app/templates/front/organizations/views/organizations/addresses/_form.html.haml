= simple_form_for [@organization, @address], html: { class: 'form form-horizontal' } do |f|
  .form-group
    .select-container.no-padding.w-100
      = f.input :company
  .form-group
    .select-container.no-padding.w-100
      = f.input :first_name, required: true
  .form-group
    .select-container.no-padding.w-100
      = f.input :last_name,  required: true
  .form-group
    .select-container.no-padding.w-100
      = f.input :address_1,  required: true
  .form-group
    .select-container.no-padding.w-100
      = f.input :address_2
  .form-group
    .select-container.no-padding.w-100
      = f.input :city
  .form-group
    .select-container.no-padding.w-100
      = f.input :zip
  .form-group.row
    .col-md-11
      = f.label :is_for_billing, class: 'semibold'
    .col-md-1.form-check.form-switch.custom-form-switch
      = f.input :is_for_billing, as: :boolean, label: "Non", label_html: { class: 'form-check-label' }, input_html: { id: '', class: 'custom-form-inline form-check-input' }
  .form-group.row
    .col-md-11
      = f.label :is_for_paper_return, class: 'semibold'
    .col-md-1.form-check.form-switch.custom-form-switch
      = f.input :is_for_paper_return, as: :boolean, label: "Non", label_html: { class: 'form-check-label' }, input_html: { id: '', class: 'custom-form-inline form-check-input' }
  .form-group.row
    .col-md-11
      = f.label :is_for_paper_set_shipping, class: 'semibold'
    .col-md-1.form-check.form-switch.custom-form-switch
      = f.input :is_for_paper_set_shipping, as: :boolean, label: "Non", label_html: { class: 'form-check-label' }, input_html: { id: '', class: 'custom-form-inline form-check-input' }  
  .form-actions
    .form-group.no-margin
      .w-100.text-end
        - link_name = action_name == 'new' ? t('actions.return').capitalize : t('actions.cancel').capitalize
        = link_to link_name, organization_addresses_path(@organization), class: 'btn btn-light'
        = f.submit t('actions.submit'), class: 'btn btn-primary'