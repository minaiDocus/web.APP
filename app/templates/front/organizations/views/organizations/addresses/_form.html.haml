= simple_form_for [@organization, @address], html: { class: 'form form-horizontal margin0' } do |f|
  .card-body
    .row
      .col-md-12
        = f.input :company
        = f.input :first_name, required: true
        = f.input :last_name,  required: true
        = f.input :address_1,  required: true
        = f.input :address_2
        = f.input :city
        = f.input :zip
    .form-group.row
      .col-md-11
        = f.label :is_for_billing, class: 'semibold'
      .col-md-1.form-check.form-switch.custom-form-switch
        = f.input :is_for_billing, as: :boolean, label: "Non", label_html: { class: 'form-check-label' }, input_html: { id: 'flexSwitchCheckDefault', class: 'custom-form-inline form-check-input' }
    .form-group.row
      .col-md-11
        = f.label :is_for_paper_return, class: 'semibold'
      .col-md-1.form-check.form-switch.custom-form-switch
        = f.input :is_for_paper_return, as: :boolean, label: "Non", label_html: { class: 'form-check-label' }, input_html: { id: 'flexSwitchCheckDefault', class: 'custom-form-inline form-check-input' }
    .form-group.row
      .col-md-11
        = f.label :is_for_paper_set_shipping, class: 'semibold'
      .col-md-1.form-check.form-switch.custom-form-switch
        = f.input :is_for_paper_set_shipping, as: :boolean, label: "Non", label_html: { class: 'form-check-label' }, input_html: { id: 'flexSwitchCheckDefault', class: 'custom-form-inline form-check-input' }
  .card-footer
    .form-actions
      .form-group.no-margin
        .w-100.text-end
          - link_name = action_name == 'new' ? t('actions.return').capitalize : t('actions.cancel').capitalize
          = link_to link_name, organization_addresses_path(@organization), class: 'btn btn-light'
          = f.submit t('actions.submit'), class: 'btn btn-primary'
