                  %a.page-link{ href: '#', "aria-label" => "Next"}
                    %span{ "aria-hidden" => "true"} &raquo;
                    %span.sr-only Next
  

  .modal#integration
    .modal-dialog
      .modal-content
        .modal-header
          %h5.modal-title Intégration automatique des factures
          %button.close{ type: :button, "aria-label" => "Close", data: { dismiss: "modal"} }
            %span{ "aria-hidden" => "true"} &times;
        .modal-body
          .form-group
            %label Code client
            %select.searchable-option-list.form-control{ multiple: true}
              %option Selectionner / Rechercher un dossier client
              %option Dossier 1
              %option Dossier 2
              %option Dossier 3
              %option Dossier 4
        .modal-footer
          %button.btn.cancel{ type: :button } Annuler
          %button.btn.add{ type: :button } Commander

  .sub_integration_append.hide
    .sub_menu
      %ul
        %li
          %span.synchronize= glyphicon('loop')
          &nbsp;Synchroniser les factures
        %li
          %span.edit= glyphicon('pencil')
          &nbsp;Editer
        %li.label_red.delete
          %span= glyphicon('trash', { color: "#FF4848" })
          &nbsp;Supprimer

  .sub_facture_append.hide
    .sub_menu
      %ul
        %li
          %span.see= glyphicon('eye')
          &nbsp;Voir
        %li
          %span.download= glyphicon('cloud-download')
          &nbsp;Télécharger

