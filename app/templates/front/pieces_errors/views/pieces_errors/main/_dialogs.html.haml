.modal.fade.in#filter-ignored-pre-assignment
  .modal-dialog
    .modal-content
      .modal-header
        %h5.modal-title.bold Filtre pieces ignorées
        %button.btn-close{'aria-label' => 'Close', 'data-bs-dismiss' => 'modal', :type => 'button'}
      .modal-body
        %form#filter-ignored-pre-assignment-form
          .form-group
            %label.semibold Date de création
            .select-container.no-padding.w-100.date
              = text_field_tag 'filter_contains[created_at]', (params[:filter_contains][:created_at] rescue ''), class: 'daterange'

          .form-group
            %label.semibold N° pièce
            .select-container.no-padding.w-100
              = text_field_tag 'filter_contains[piece_name]', (params[:filter_contains][:piece_name] rescue '')

          .form-group
            %label.semibold N° facture
            .select-container.no-padding.w-100
              = text_field_tag 'filter_contains[piece_number]', (params[:filter_contains][:piece_number] rescue '')

          .form-group
            %label.semibold Nom du lot
            .select-container.no-padding.w-100
              = text_field_tag 'filter_contains[pack_name]', (params[:filter_contains][:pack_name] rescue '')

          .form-group
            %label.semibold Statut
            .select-container.no-padding.w-100
              = select_tag 'filter_contains[pre_assignment_state]', options_for_select([['Pré-affectation ignorée', 'ignored'], ['En cours de renvoi à la pré-affectation', 'force_processing']], (params[:filter_contains][:pre_assignment_state] rescue '')), include_blank: true, class: 'form-select'

      .modal-footer
        %button.btn.btn-light.semibold.cancel{ type: :button } Annuler
        %button.btn.btn-primary.semibold.validate{ type: :button } Filtrer

