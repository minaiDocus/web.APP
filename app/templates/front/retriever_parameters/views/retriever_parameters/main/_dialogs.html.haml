.modal.fade.in#form-bank-account
  .modal-dialog
    .modal-content
      .modal-header
        %h5.modal-title.bold Filtre opération bancaire
        %button.btn-close{'aria-label' => 'Close', 'data-bs-dismiss' => 'modal', :type => 'button'}
      .modal-body
      .modal-footer
        %button.btn.btn-light.semibold.cancel{ type: :button } Annuler
        %button.btn.btn-primary.semibold.validate{ type: :button } Valider

.modal.fade.in#filter-documents-selection
  .modal-dialog
    .modal-content
      .modal-header
        %h5.modal-title.bold Filtre séléction document restant
        %button.btn-close{'aria-label' => 'Close', 'data-bs-dismiss' => 'modal', :type => 'button'}
      .modal-body
        %form#filter-documents-selection-form
          .form-group
            %label.semibold Service
            .select-container.no-padding.w-100
              %input{name: 'document_contains[service_name]', type: :text, value: params[:document_contains].try(:[], :service_name) }

          .form-group
            %label.semibold Date
            .select-container.no-padding.w-100.date
              %input.date.daterange#select-document{name: 'document_contains[date]', type: :text, value: params[:document_contains].try(:[], :date) }

          .form-group
            %label.semibold Nom original
            .select-container.no-padding.w-100.date
              %input{name: 'document_contains[original_file_name]', type: :text, value: params[:document_contains].try(:[], :original_file_name) }

          .form-group
            %label.semibold Montant
            .select-container.no-padding.w-100.date
              %input{name: 'document_contains[amount]', type: :text, value: params[:document_contains].try(:[], :amount) }
      .modal-footer
        %button.btn.btn-light.semibold.cancel{ type: :button } Annuler
        %button.btn.btn-primary.semibold.validate{ type: :button } Valider

