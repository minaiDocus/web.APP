.modal.fade.in#filter-retriever
  .modal-dialog
    .modal-content
      .modal-header
        %h5.modal-title.bold Recherche
        %button.btn-close{'aria-label' => 'Close', 'data-bs-dismiss' => 'modal', :type => 'button'}
      .modal-body
        .form-group
          %label.semibold Nom personnalisé
          .select-container.no-padding.w-100.date.date-picker
            %input#search_name{ type: :text }

        .form-group
          %label.semibold Etat :
          %select.form-select#search_state{ "aria-label" => "Default select"  }              
            %option{value: ''}
            %option{value: 'ready'} OK
            %option{value: 'error' } Erreur
            %option{value: 'unavailable'} Indisponnible
        
      .modal-footer
        %button.btn.btn-light.semibold.cancel#filter_cancel{ type: :button } Annuler
        %button.btn.btn-primary.semibold#filter_button{ type: :button } Rechercher

.modal.fade.in#add-retriever{data: { 'bs-backdrop': "static" } }
  .modal-dialog
    .modal-content
      .modal-header
        %h5.modal-title.bold Configuration d'un nouveau récupérateur
        %button.btn-close{'aria-label' => 'Close', 'data-bs-dismiss' => 'modal', :type => 'button'}
      .modal-body.back-grey
        #step1.step1.steps
          = render file: Rails.root.join('app/templates/front/retrievers/views/retrievers/configuration_steps/_step1.html.haml')
        #step2.step2.steps
        #step3.step3.steps
        #step4.step4.steps
      .modal-footer{ style: 'display: block' }
        .w-30.float-start
          %img{ src: "/assets/application/budgealogo.png", alt: "Budget Insight", style: 'max-width: 216px' }
        .w-50.float-end.text-end
          %button.btn.btn-light.semibold.cancel{ type: :button, data: { 'bs-dismiss': 'modal' } } Annuler
          %button.btn.btn-secondary.semibold.secondary{ type: :button, disabled: 'disabled' } Précédent
          %button.btn.btn-primary.semibold.primary{ type: :button } Valider

