- content_for :form do
  = simple_nested_form_for @accounting_plan, url: update_multiple_organization_customer_accounting_plan_vat_accounts_path(@organization, @customer), html: { class: 'form-horizontal' }, wrapper: false do |f|
    .box.no-margin
      = f.fields_for :vat_accounts do |vat_account|
        .form-group.row
          .col-md-11
            .w-100.text-start
              = vat_account.label :code, label: t('activerecord.models.vat_account.attributes.code'), class: 'semibold'
              .select-container.no-padding.w-100
                = vat_account.input :code, label: false
              = vat_account.label :nature, label: t('activerecord.models.vat_account.attributes.nature'), class: 'semibold'
              .select-container.no-padding.w-100
                = vat_account.input :nature, label: false
              = vat_account.label :account_number, label: t('activerecord.models.vat_account.attributes.account_number'), class: 'semibold'
              .select-container.no-padding.w-100
                = vat_account.input :account_number, label: false
          .col-md-1
            .w-10.text-start
              = vat_account.link_to_remove glyphicon('x', { size: '15', color: "#FF4848" })

      .form-group.w-100
        .text-start
          = f.link_to_add 'Ajouter un compte de TVA', :vat_accounts, class: 'btn btn-primary bold'
        .text-end
          = link_to t('actions.cancel'), organization_customer_accounting_plan_vat_accounts_path(@organization, @customer), class: 'btn btn-light semibold'
          = f.submit 'Ajouter', class: 'btn btn-primary bold add-vat-account'

#accounting_plan.edit.derivationRight
  - if @customer.configured?
    = content_for :form
  - else
    .box
      = render 'customers/main/steps'
    = content_for :form


