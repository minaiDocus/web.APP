  / - else
  /   .box.derivationRight
  /     = render 'customers/main/steps'
  /   .row
  /     .col-md-12
  /       .box.clearfix
  /         .float-left
  /           %h3
  /             Comptes de TVA pour le dossier : 
  /             %span.text-info.fs-origin= @customer
  /         .float-right
  /           = link_to t('actions.previous_step'), previous_organization_customer_setup_path(@organization, @customer), class: 'btn btn-light'
  /           = link_to t('actions.complete_later'), complete_later_organization_customer_setup_path(@organization, @customer), class: 'btn btn-light'
  /           = link_to t('actions.next_step'), next_organization_customer_setup_path(@organization, @customer), class: 'btn btn-primary'

  / .row.derivationLeft
  /   .col-md-12
  /     .box
  /       %table.table.table-striped.table-condensed.margin0bottom.table.bordered-inner.table-detachable-head
  /         %thead
  /           %tr.bg-brown.text-white
  /             %th= t('activerecord.models.vat_account.attributes.code')
  /             %th= t('activerecord.models.vat_account.attributes.nature')
  /             %th= t('activerecord.models.vat_account.attributes.account_number')
  /         %tbody
  /           - @vat_accounts.each do |vat_account|
  /             %tr
  /               %td= vat_account.code
  /               %td= vat_account.nature
  /               %td= vat_account.account_number

  /       - unless @customer.configured?
  /         .margin2top
  /           = link_to t('actions.edit'), edit_multiple_organization_customer_accounting_plan_vat_accounts_path(@organization, @customer), class: 'btn btn-primary'

  .row
    .col-md-7
      %h3.bold Compte de TVA
    .col-md-5.text-end.no-padding
      %button.btn.btn-light.semibold
        %span.me-2= glyphicon('cloud-download', { size: '16', color: '#72AA42'})
        %span Importer un CSV            
      %button.btn.btn-primary.semibold
        %span.me-2= glyphicon('plus', { size: '15', color: '#FFFF'})
        %span Ajouter un compte de TVA
  .mb-3
  .row
    .col-md-12
      %table.table.table-striped.table_integration
        %thead
          %th= t('activerecord.models.vat_account.attributes.code')
          %th= t('activerecord.models.vat_account.attributes.nature')
          %th= t('activerecord.models.vat_account.attributes.account_number')
          %th.text-end Action
        %tbody
          - @vat_accounts.each do |vat_account|
            %tr
              %td.semibold= vat_account.code
              %td= vat_account.nature
              %td= vat_account.account_number
              %td.text-end.pointer
                .action.sub_edit_delete.list-collaborators
                  %span.glyph= glyphicon('ellipses', { size: '15', color: 'rgba(26, 26, 26, 0.7);', style: 'transform: rotate(90deg)'})
                  .sub_menu.text-start.hide
                    %ul.no-margin.no-padding.regular
                      - unless @customer.configured?
                        %li.edit
                          = link_to glyphicon('pencil', { size: '15', color: 'rgba(26, 26, 26, 0.7);'}) + ' ' + t('actions.edit'), edit_multiple_organization_customer_accounting_plan_vat_accounts_path(@organization, @customer)
                      %li.delete.red-label
                        %span= glyphicon('trash', { size: '15', color: "#FF4848" })
                        &nbsp;Supprimer


= javascript_include_tag 'front/vat_accounts/assets/javascripts/main'