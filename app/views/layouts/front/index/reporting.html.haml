= stylesheet_link_tag 'front/reporting/main'

.container-fluid
  .row
    .col-md-6
      %h1.bold
        Reporting
    .col-md-3      
      = select_tag 'customer_filter', options_for_select(['DEVP%001 - TEST - Testa Test', 'DEVP%002 - TEST - Testa Test', 'DEVP%003 - TEST - Testa Test', 'DEVP%004 - TEST - Testa Test']), id: 'customer_filter', multiple: true     
    .col-md-3
      .select-container
        .row.date.datepicker
          .col-md-2= glyphicon('calendar', { size: '20', color: '#b5a6a6'} )
          .col-md-8.label-titre Filtrer par period                        
          .col-md-2.no-padding= glyphicon('chevron-bottom', { size: '20', color: '#b5a6a6'})
          %span.add-on.hide{style: 'width: 0px; height:35px'}
  .row
    .col-md-4.chart-container.back-white
      %h4.bold Flux documentaire
      .row
        .col-md-12.mt-4
          %canvas#chart_flux_document
    .col-md-4.chart-container.back-white
      %h4.bold Taux de livraison en compte d'attente
      .row.chart-deliver
        .col-md-11
          %canvas#chart_sending
    .col-md-4.chart-container.back-white
      %h4.bold Fonctionnement auto
      .row.chart-retriever.mt-5
        .col-md-6.no-margin.no-padding
          .label-canvas.bold
            60%
          %canvas#chart_retriever_active          
          %h5.text-center.label-retriever.no-margin Automate actifs  
        .col-md-6.no-margin.no-padding
          .label-canvas.bold
            40%
          %canvas#chart_retriever_inactive          
          %h5.text-center.label-retriever.no-margin Automate en panne  

  .row
    .col-md-4.chart-container.back-white
      %h4.bold
        Top retard envoi de document
      %table.table.table-striped
        %thead
          %th.text-left Nom du dossier
          %th.text-right Date du dernier doc.
        %tbody
          %tr
            %td.text-left IDOC%Client1 - iDocus
            %td.text-right 30/10/20
          %tr
            %td.text-left IDOC%Client2 - iDocus
            %td.text-right 31/10/20
    .col-md-4.chart-container.back-white
      %h4.bold
        Top livraison compte d'attente
      %table.table.table-striped
        %thead
          %th.text-left Nom du dossier
          %th.text-right Part de compte d'attente
        %tbody
          %tr
            %td.text-left IDOC%Client1 - iDocus
            %td.text-right 30%
          %tr
            %td.text-left IDOC%Client2 - iDocus
            %td.text-right 20%
    .col-md-4.chart-container.back-white
      %h4.bold
        Automate en panne
      %table.table.table-striped
        %thead
          %th.text-left Nom du dossier
          %th.text-center Automate
          %th.text-right Status
        %tbody
          %tr
            %td.text-left IDOC%Client1 - iDocus
            %td.text-center Crédit du nord
            %td.text-right 
              .badge.badge-secondary
                SCA Required
          %tr
            %td.text-left IDOC%Client2 - iDocus
            %td.text-center Crédit du nord
            %td.text-right 
              .badge.badge-secondary
                SCA Required

= javascript_include_tag 'front/reporting/main'
